body
  div(data-hook="test").mdl-layout.mdl-js-layout

    .mdl-layout__header-row.mdl-color--blue-grey-900
      // Title
      span.mdl-layout-title.mdl-layout--large-screen-only
        a(data-hook="nlescpage" href='https://www.esciencecenter.nl' target='_blank')
          div.demo-avatar
      // Add spacer, to align navigation to the right
      .mdl-layout-spacer
      // Navigation. We hide it in small screens.
      nav.mdl-navigation.mdl-layout--large-screen-only
        a.mdl-navigation__link(href='/home') Home
        a.mdl-navigation__link(href='/datasets') Data
        a.mdl-navigation__link(href='/analyze') Analysis
        a.mdl-navigation__link(href='#' data-hook="help-button" id="help-button")
          i.material-icons help
      //- span(style="margin-right: 20px;").mdl-layout-title.mdl-layout--small-screen-only
      //-   //- img.mdl-logo-image(src='images/android-logo-white.png')
      //-   a(data-hook="nlescpage" href='https://www.esciencecenter.nl' target='_blank')
      //-     div.demo-avatar


    .mdl-drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-layout--small-screen-only
      span.mdl-layout-title
        //- img.mdl-logo-image(src='images/android-logo-white.png')
        a(data-hook="nlescpage" href='https://www.esciencecenter.nl' target='_blank')
          div.demo-avatar(style="margin-top: 20px; margin-bottom: 50px;")
      nav.mdl-navigation
        a.mdl-navigation__link(href='/home') Home
        a.mdl-navigation__link(href='/datasets') Data
        a.mdl-navigation__link(href='/analyze') Dashboard
        a.mdl-navigation__link(href='#' data-hook="help-button" id="help-button")
          i.material-icons help
          span Help

      .mdl-drawer-separator
      .mdl-layout-spacer(style="margin-top: 20px;")

      nav.mdl-navigation
        a.mdl-navigation__link(href='https://nlesc.github.io/spot-tutorial/tutorial') Tutorial
        a.mdl-navigation__link(href='https://github.com/NLeSC/spot') Github

      .mdl-drawer-separator
      .mdl-layout-spacer(style="margin-bottom: 20px;")
      span.versionText Version 0.2.0

    div(id="spinner" style="display: none").spinner
      div.bounce1
      div.bounce2
      div.bounce3

    main(data-hook="page-container").mdl-layout__content

    div(id="progress-bar" style="width: 100%; height: 5%; display: none").mdl-progress.mdl-js-progress

    div(id="snack-bar" aria-live="assertive" aria-atomic="true" aria-relevant="text").mdl-js-snackbar.mdl-snackbar
      div.mdl-snackbar__text
      button(type="button").mdl-snackbar__action
